<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveAddress.Pages.AddressPage" Title="Listar endereços">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout>
                <Entry x:Name="textobuscado" Keyboard="Plain" Placeholder="Nome do endereço" HorizontalOptions="StartAndExpand"/>
                <Button x:Name="BotaoProcurar" Text="Procurar" Clicked="BotaoProcurar_Clicked"/>
            </StackLayout>
            
            <StackLayout>
                <ListView x:Name="ListAddress" HasUnevenRows="True" SeparatorColor="Black" Margin="15" ItemSelected="ListAddress_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding Nome,StringFormat='Nome: {0}'}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>