<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveAddress.Pages.AddressPage">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout>
                <ImageButton Source=""/>
            </StackLayout>
            
            <StackLayout>
                <ListView x:Name="ListAddress" HasUnevenRows="True" SeparatorColor="Red" Margin="15" ItemSelected="ListAddress_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding Titulo,StringFormat='Título: {0}'}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>